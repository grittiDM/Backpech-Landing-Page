{
  "name": "backpech-assistencia",
  "version": "1.0.0",
  "scripts": {
    "dev": "tailwindcss -i ./src/input.css -o ./assets/css/main.css --watch",
    "build": "tailwindcss -i ./src/input.css -o ./assets/css/main.min.css --minify",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d .",
    "optimize-images": "npx sharp-cli input/*.{jpg,png} --output ./images/ --format webp --quality 80"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "gh-pages": "^6.1.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.5"
  },
  "dependencies": {
    "sharp-cli": "^5.1.0"
  }
}
